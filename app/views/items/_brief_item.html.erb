<h3>
  <%= brief_item_counter + 1 %>. <%= link_to("#{brief_item.user}'s #{brief_item.model}", item_path(brief_item)) %>
  <%- if !brief_item.purchased -%>
    <i class="icon-warning-sign" data-toggle="tooltip" title="WARNING: This item has not yet been purchased."></i>
  <%- elsif !brief_item.received -%>
    <i class="icon-warning-sign" data-toggle="tooltip" title="WARNING: This item has not yet been received."></i>
  <%- end -%>
</h3>
<dl class="dl-horizontal">
  <%- unless brief_item.location.blank? -%>
    <dt>Location:</dt>
    <dd><%= brief_item.location %><%= " (#{brief_item.department})" unless brief_item.department.blank? %></dd>
  <%- end -%>

  <%- unless brief_item.barcode.blank? -%>
    <dt>Barcode:</dt>
    <dd><%= brief_item.barcode %></dd>
  <%- end -%>

  <%- unless brief_item.serial.blank? -%>
    <dt>Serial:</dt>
    <dd><%= brief_item.serial %></dd>
  <%- end -%>
</dl>